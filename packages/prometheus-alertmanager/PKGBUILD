targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-prometheus-alertmanager"
pkgver="0.26.0"
pkgrel="1"
pkgdesc="Alert manager exporter for open-source systems monitoring and alerting toolkit"
pkgdesclong=(
  "Alert manager exporter for open-source systems monitoring and alerting toolkit"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
sources=(
  "https://github.com/prometheus/alertmanager/releases/download/v${pkgver}/alertmanager-${pkgver}.linux-amd64.tar.gz"
  "alertmanager.yml"
  "email.tmpl"
  "alert_rules.yml"
  "${pkgname}.default"
  "${pkgname}.service"
  "prometheus.sysusers"
)
hashsums=(
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
)

depends=(
  "systemd"
)

conflicts=(
  "prometheus-alertmanager"
)

backup=(
  "/etc/carbonio/${pkgname}/alertmanager.yml"
  "/etc/carbonio/${pkgname}/email.tmpl"
  "/etc/carbonio/${pkgname}/alert_rules.yml"
)

package() {
  cd "${srcdir}/alertmanager-${pkgver}.linux-amd64"

  install -Dm 755 alertmanager \
    "${pkgdir}/usr/bin/${pkgname}"
  install -Dm 755 amtool \
    "${pkgdir}/usr/bin/amtool"

  install -dm 750 -o210 -g210 "${pkgdir}/var/lib/alertmanager/data"
  install -dm 750 -o210 -g210 "${pkgdir}/etc/carbonio/${pkgname}/email-templates"

  install -Dm 644 -g210 "${srcdir}/alertmanager.yml" \
    "${pkgdir}/etc/carbonio/${pkgname}/alertmanager.yml"
  install -Dm 644 -g210 "${srcdir}/email.tmpl" \
    "${pkgdir}/etc/carbonio/${pkgname}/email.tmpl"
  install -Dm 644 -g210 "${srcdir}/alert_rules.yml" \
    "${pkgdir}/etc/carbonio/${pkgname}/alert_rules.yml"

  install -Dm 644 "${srcdir}"/${pkgname}.service \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"
  install -Dm 644 "${srcdir}"/${pkgname}.default \
    "${pkgdir}/etc/default/${pkgname}"
  install -Dm 644 "${srcdir}"/prometheus.sysusers \
    "${pkgdir}/usr/lib/sysusers.d/${pkgname}.conf"
}

postinst() {
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

  systemd-sysusers >/dev/null || true
  systemd-tmpfiles --create >/dev/null || true

  # While in beta enable service manually
  # if [ -d /run/systemd/system ]; then
  # systemctl daemon-reload >/dev/null 2>&1 || :
  # systemctl enable ${pkgname}.service >/dev/null 2>&1 || :
  # systemctl start ${pkgname}.service >/dev/null 2>&1 || :
  # fi

  echo "======================================================"
  echo "Carbonio Prometheus Alert Manager installed successfully!"
  echo "You can configure it in prometheus.yml"
  echo "While in beta enable service manually"
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable ${pkgname}.service >/dev/null 2>&1 || :
    systemctl stop ${pkgname}.service >/dev/null 2>&1 || :
  fi
}

postrm() {
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}
