pkgname="carbonio-prometheus"
pkgver="2.48.1"
pkgrel="1"
pkgdesc="An open-source systems monitoring and alerting toolkit"
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch=('x86_64')
license=('Apache-2.0')
source=(
  "https://github.com/prometheus/prometheus/releases/download/v${pkgver}/prometheus-${pkgver}.linux-amd64.tar.gz"
  "clamav.yaml"
  "consul.yaml"
  "mta_queues.yaml"
  "mysql.yaml"
  "nginx.yaml"
  "postgres.yaml"
  "prometheus.default"
  "prometheus.service"
  "prometheus.sysusers"
  "prometheus.yml"
  "carbonio-prometheus.sh"
  "policies.json"
)
sha256sums=("SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP")

depends=(
  "systemd"
)

conflicts=(
  "prometheus"
)

backup=(
  "etc/carbonio/${pkgname}/prometheus.yml"
)

package() {
  cd "${srcdir}/prometheus-${pkgver}.linux-amd64"

  install -Dm 755 prometheus "${pkgdir}/usr/bin/prometheus"
  install -Dm 755 promtool "${pkgdir}/usr/bin/promtool"

  install -dm 750 -o210 -g210 "${pkgdir}/var/lib/prometheus"
  install -dm 750 -o210 -g210 "${pkgdir}/etc/carbonio/${pkgname}/rules"


  install -Dm 640 -g210 "${srcdir}/prometheus.yml" \
    "${pkgdir}/etc/carbonio/${pkgname}/prometheus.yml"
  install -Dm 640 -g210 "${srcdir}/policies.json" \
    "${pkgdir}/etc/carbonio/${pkgname}/service-discover/policies.json"
  cp -r consoles* "${pkgdir}/etc/carbonio/${pkgname}/"

  install -Dm 640 -g210 "${srcdir}/clamav.yaml" \
    "${pkgdir}/etc/carbonio/${pkgname}/rules"
  install -Dm 640 -g210 "${srcdir}/consul.yaml" \
    "${pkgdir}/etc/carbonio/${pkgname}/rules"
  install -Dm 640 -g210 "${srcdir}/mta_queues.yaml" \
    "${pkgdir}/etc/carbonio/${pkgname}/rules"
  install -Dm 640 -g210 "${srcdir}/mysql.yaml" \
    "${pkgdir}/etc/carbonio/${pkgname}/rules"
  install -Dm 640 -g210 "${srcdir}/nginx.yaml" \
    "${pkgdir}/etc/carbonio/${pkgname}/rules"
  install -Dm 640 -g210 "${srcdir}/node-exporter.yaml" \
    "${pkgdir}/etc/carbonio/${pkgname}/rules"
  install -Dm 640 -g210 "${srcdir}/postgres.yaml" \
    "${pkgdir}/etc/carbonio/${pkgname}/rules"

  install -Dm 755 "${srcdir}/carbonio-prometheus.sh" \
    "${pkgdir}/etc/zextras/pending-setups.d/carbonio-prometheus.sh"
  install -Dm 644 "${srcdir}/prometheus.service" \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"
  install -Dm 644 "${srcdir}/prometheus.sysusers" \
    "${pkgdir}/usr/lib/sysusers.d/${pkgname}.conf"
  install -Dm 644 "${srcdir}/prometheus.default" \
    "${pkgdir}/etc/default/${pkgname}"
}

postinst() {
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

  systemd-sysusers >/dev/null || true
  systemd-tmpfiles --create >/dev/null || true

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable ${pkgname}.service >/dev/null 2>&1 || :
  fi

  echo "======================================================"
  echo "Carbonio Prometheus installed successfully!"
  echo "You must run pending-setups to configure it."
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable ${pkgname} >/dev/null 2>&1 || :
    systemctl stop ${pkgname} >/dev/null 2>&1 || :
  fi
}

postrm() {
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}
