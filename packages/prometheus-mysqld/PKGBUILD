targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-prometheus-mysqld-exporter"
pkgver="0.14.0"
pkgrel="2"
pkgdesc="Mysqld exporter for open-source systems monitoring and alerting toolkit"
pkgdesclong=(
  "Mysqld manager exporter for open-source systems monitoring and alerting toolkit"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
sources=(
  "https://github.com/prometheus/mysqld_exporter/releases/download/v${pkgver}/mysqld_exporter-${pkgver}.linux-amd64.tar.gz"
  "${pkgname}.default"
  "${pkgname}.service"
  "${pkgname}.cnf"
  "${pkgname}-consul.hcl"
  "set-${pkgname}.sh"
  "prometheus.sysusers"
)

hashsums=(
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
)

depends=(
  "systemd"
)

conflicts=(
  'prometheus-mysqld-exporter'
)

package() {
  cd "${srcdir}/mysqld_exporter-${pkgver}.linux-amd64"
  
  install -Dm 755 mysqld_exporter "${pkgdir}/usr/bin/carbonio/${pkgname}/${pkgname}"
	
  install -Dm 755 "${srcdir}/set-${pkgname}.sh" "${pkgdir}/usr/bin/carbonio/${pkgname}/set-${pkgname}.sh"
	
  install -Dm 644 "${srcdir}/${pkgname}.service" "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"
	
  install -Dm 644 "${srcdir}/${pkgname}.default" "${pkgdir}/etc/default/${pkgname}"
	
  install -Dm 644 "${srcdir}/${pkgname}.cnf" "${pkgdir}/etc/carbonio/${pkgname}/${pkgname}.cnf"

  install -Dm 644 "${srcdir}/prometheus.sysusers" "${pkgdir}/usr/lib/sysusers.d/${pkgname}.conf"
  install -Dm 644 "${srcdir}/${pkgname}-consul.hcl" "${pkgdir}/etc/zextras/service-discover/${pkgname}.hcl"		
}

postinst() {
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

  systemd-sysusers >/dev/null || true
  systemd-tmpfiles --create >/dev/null || true

  /usr/bin/carbonio/${pkgname}/set-${pkgname}.sh 	

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable ${pkgname}.service >/dev/null 2>&1 || :
    systemctl start ${pkgname}.service >/dev/null 2>&1 || :
  fi
  
  echo "======================================================"
  echo "Carbonio Mysql Exporter installed successfully!"
  echo "You must reload service discover or add this host to prometheus.yml"
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable ${pkgname}.service >/dev/null 2>&1 || :
    systemctl stop ${pkgname}.service >/dev/null 2>&1 || :
  fi
}

postrm() {
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}