targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-prometheus-blackbox-exporter"
pkgver="0.23.0"
pkgrel="1"
pkgdesc="Blackbox exporter for open-source systems monitoring and alerting toolkit"
pkgdesclong=(
  "Blackbox exporter for open-source systems monitoring and alerting toolkit"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
sources=(
  "https://github.com/prometheus/blackbox_exporter/releases/download/v${pkgver}/blackbox_exporter-${pkgver}.linux-amd64.tar.gz"
  "${pkgname}.default"
  "${pkgname}.service"
  "${pkgname}.yml"
  "prometheus.sysusers"
)

hashsums=(
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
)

depends=(
  "systemd"
)

conflicts=(
  "prometheus-blackbox-exporter"
)

backup=(
    "/etc/carbonio/${pkgname}/${pkgname}.yml"
    "/etc/carbonio/${pkgname}/blackbox-targets/http_checks.yml"
    "/etc/carbonio/${pkgname}/blackbox-targets/ping_checks.yml"
    "/etc/carbonio/${pkgname}/blackbox-targets/ssh_checks.yml"
)

package() {
  cd "${srcdir}/blackbox_exporter-${pkgver}.linux-amd64"

  install -Dm 755 blackbox_exporter  "${pkgdir}}/usr/bin/carbonio/${pkgname}"

  install -Dm 644 "${srcdir}/${pkgname}.service"  "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"
  install -Dm 644 "${srcdir}/${pkgname}.default"  "${pkgdir}/etc/default/${pkgname}"

  install -Dm 644 -g210 "${srcdir}/${pkgname}.yml"  "${pkgdir}/etc/carbonio/${pkgname}/${pkgname}.yml"
  install -Dm 644 "${srcdir}/prometheus.sysusers"  "${pkgdir}/usr/lib/sysusers.d/${pkgname}.conf"	
  # install -Dm 644 "${srcdir}/${pkgname}-consul.hcl" "${pkgdir}/etc/zextras/service-discover/${pkgname}.hcl"
  
}


postinst() {
  if hash initctl 2>/dev/null; then
    initctl reload-configuration 2>/dev/null || true
  fi

  systemd-sysusers >/dev/null || true
  systemd-tmpfiles --create >/dev/null || true

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable ${pkgname}.service >/dev/null 2>&1 || :
    systemctl start ${pkgname}.service >/dev/null 2>&1 || :
  fi

  echo "======================================================"
  echo "Carbonio Blackbox Exporter installed successfully!"
  echo "You must add this service to prometheus.yml"
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable ${pkgname}.service >/dev/null 2>&1 || :
    systemctl stop ${pkgname}.service >/dev/null 2>&1 || :
  fi
}

postrm() {
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}

